<!DOCTYPE html>
<html>
  <head>
    <title>SocialGoalApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <h1>Welcome, <%= current_user.username %> </h1>
      <%= button_to "Sign Out", session_url, method: :delete %>
    <% end %>
    <%= yield %>
  </body>
</html>
